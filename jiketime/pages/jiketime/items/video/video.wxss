page {
    background-color: #EEECF7;
}
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: block;
}
.head_video {
    width: 100%;
    height: 400rpx;
}
.dplayer-video {
    width: 100%;
    height: 100%;
}
.class_intr {
    width: 100%;
    height: 140rpx;
    background-color: #fff;
    overflow: hidden;
}
.up {
    width: 100%;
    height: 80rpx;
    display: flex;
}
.class_name {
    font-size: 34rpx;
    margin-left: 20rpx;
    margin-top: 24rpx;
}
.class_buy {
    font-size: 24rpx;
    color: #797877; 
    margin-left: 320rpx;
    margin-top: 30rpx;
}
.under {
    width: 100%;
    height: 60rpx;
    display: flex;
}
.play {
    width: 43rpx;
    height: 43rpx;
    margin-left: 20rpx;
    margin-top: 6rpx;
}
.class_lesson {
    font-size: 26rpx;
    color: #797877;
    margin-top: 10rpx; 
    margin-left: 5rpx; 
}
.class_date {
    font-size: 26rpx;
    color: #797877;
    margin-top: 10rpx;  
    margin-left: 20rpx;    
}
.class-tab-box {
    width: 100%;
    height: 100vh;
    display: block;
    margin: 0 auto;
}
.class-tab-block {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    background-color: #fff;
    margin-top: 20rpx;
    z-index: 999;
    border: 1px solid #EEECF7;
}
.class-tab-nav {
    display: inline-block;
    height: 100rpx;
    font-size: 35rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    overflow: hidden;
}
.class-tab-nav:nth-child(1) {
    margin-left: 180rpx;
}
.class-tab-nav:nth-child(2) {
    margin-left: 100rpx;
}
.class-tab-nav.on{
    color: #F94312;
    border-bottom: 6rpx solid #F94312;
}
.class-content {
    width: 100%;
    height: 100vh;
    display: block;
    margin: 0 auto;
}
.author_info {
    width: 100%;
    height: 200rpx;
    display: block;
    overflow: hidden;
    background-color: #fff;    
}
.title {
    font-size: 33rpx;
    margin-top: 20rpx;
    margin-left: 50rpx;
}
.author_person {
    width: 100%;
    height: 150rpx;
    display: flex;
    overflow: hidden;
}
.author_avatar {
    width: 101rpx;
    height: 101rpx;
    margin-top: 20rpx;
    margin-left: 50rpx;
}
.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 1px solid #F5730A;
}
.right {
    height: 100%;
    width: 600rpx;
    overflow: hidden;
}
.author_name {
    font-size: 33rpx;
    margin-top: 30rpx;
    margin-left: 10rpx;

}
.author_pro {
    font-size: 26rpx;
    color: #797877; 
    margin-left: 10rpx;
}
.video_play {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border: 1px solid #EEECF7;
    display: flex; 
}
.video_play_icon {
    width: 50rpx;
    height: 50rpx;
    margin-left: 20rpx;
    margin-top: 14rpx;
}
.lesson_name {
    width: 626rpx;
    font-size: 30rpx;
    margin-left: 15rpx;
    margin-top: 15rpx;
}
.watch {
    font-size: 26rpx;
    width: 56rpx;
    height: 38rpx;
    color: #F5730A;
    border: 1px solid #F5730A;
    margin-top: 16rpx;
    margin-right: 20rpx;
}
.bottom {
    width: 100%;
    height: 180rpx;
    position: fixed;
    bottom: 0;
    display: inline-block;
    overflow: hidden;
    display: block;
}
.drop_down_item {
    width: 80rpx;
    height: 90rpx;
    margin-left: 630rpx;
}
.share {
    width: 80rpx;
    height: 80rpx;
}
.bottom-wrapper {
    height: 90rpx;
    width: 100%;
    display: block;
    margin: 0 auto;
    display: flex;    
    font-size: 30rpx;
}
.bottom-left-box {
    height: 100%;
    width: 50%;
    background-color: #EEE;
}
.subscribe {
    display: block;
    font-size: 40rpx;
    color: #F5730A;
    text-align: center;
    padding: 18rpx;
}
.group {
    font-size: 28rpx;
    color: #797877;    
}
.bottom-right-box {
    height: 100%;
    width: 50%;
    background-color: #F5730A;    
}
.origin_price {
    display: block;
    text-align: center;
    font-size: 33rpx;
    color: #ffffff;
    padding: 20rpx;
}