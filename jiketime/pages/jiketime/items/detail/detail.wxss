page {
    background-color: #EEECF7;
}
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: block;
}
.head_img {
    width: 100%;
    height: 480rpx;
}
.learn {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.column-main {
    width: 100%;
}
.author {
    width: 100%;
    height: 200rpx;
    background-color: #fff;
    display: flex;
}
.author-avatar {
    width: 124rpx;
    height: 124rpx;
    margin-top: 40rpx;
    margin-left: 50rpx;
    overflow: hidden;
}
.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 1px solid #F5730A;
}
.author-info {
    height: 100%;
    width: 500rpx;
    display: block;
    overflow: hidden;
    margin-left: 15rpx;
}
.up {
    margin-top: 50rpx;
    overflow: hidden;

}
.name {
    font-size: 36rpx;
}
.buy {
    font-size: 26rpx;
    color: #797877;
    margin-left: 250rpx;
}
.profession {
    font-size: 30rpx;
    color: #797877;
}
.class-tab-block {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    background-color: #fff;
    margin-top: 20rpx;
    z-index: 999;
}
.class-tab-nav {
    display: inline-block;
    height: 100rpx;
    font-size: 35rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    overflow: hidden;
}
.class-tab-nav:nth-child(1) {
    margin-left: 180rpx;
}
.class-tab-nav:nth-child(2) {
    margin-left: 100rpx;
}
.class-tab-nav.on{
    color: #F94312;
    border-bottom: 6rpx solid #F94312;
}
.class-content {
    width: 100%;
    height: 100vh;
    display: block;
    margin: 0 auto;
    background-color: #fff;
}

.bottom {
    width: 100%;
    height: 180rpx;
    position: fixed;
    bottom: 0;
    display: inline-block;
}
.drop_down_item {
    width: 80rpx;
    height: 90rpx;
    margin-left: 630rpx;
}
.share {
    width: 80rpx;
    height: 80rpx;
}
.bottom-wrapper {
    height: 90rpx;
    width: 100%;
    display: block;
    margin: 0 auto;
    background-color: #F76B0B;    
    font-size: 30rpx;
}
.subscribe {
    display: block;
    color: #fff;
    text-align: center;
    padding: 20rpx;
}
.origin_price {
    font-size: 22rpx;
    text-decoration: line-through;    
}