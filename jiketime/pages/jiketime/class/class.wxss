page {
    background-color: #EEECF7;
}
.course-tab-block {
  width: 100%;
  overflow: hidden;
  position: fixed;
  background-color: #fff;
  z-index: 999;
}
.course-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.course-tab-nav.on{
    color: #F94312;
    border-bottom: 5rpx solid #F94312;
}
.course-content{
    width: 100%;
    height: 100%;
    display: inline-block;
    margin: 0 auto;
    margin-top: 90rpx;
    overflow: hidden;
}
.course_info {
    width: 90%;
    height: 450rpx;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    background-color: #fff;
    border-top-left-radius: 20rpx 10rpx;
    border-top-right-radius: 20rpx 10rpx;
}
.course_info:nth-child(n) {
    margin-top: 50rpx;
}
.course_hd {
    width: 100%;
    height: 350rpx;
}
.course_hd image {
    width: 100%;
    height: 100%;  
}
.dat {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.course_bd {
    width: 60%;
    height: 100%;
    overflow: hidden;
    display: flex;
}
.course_bd .course_bd_box {
    width: 50rpx;
    height: 50rpx;
    margin-top: 25rpx;
    overflow: hidden;   
}
.course_bd .course_bd_box image {
    width: 38rpx;
    height: 38rpx;
    padding-left: 10rpx;
    overflow: hidden;
}

.course_bd .course_detail {
    position: relative;
    font-size: 26rpx;
    height: 38rpx;
    width: 330rpx;
    padding-left: 10rpx;
    vertical-align: center;
    padding-top: 31rpx;
    color: #7d7d78;
    overflow: hidden;
}
.course_bd .course_detail:after {
    content: '';
    right: 0;
    top: 37rpx;
    height: 26rpx;
    width: 1rpx;
    background-color: #7d7d78;
    position: absolute;
}
.course_ft {
    width: 40%;
    height: 100%;
    overflow: hidden;
    display: flex;
}
.course {
    font-size: 26rpx;
    height: 38rpx;
    padding-top: 31rpx;
    padding-left: 30rpx;
    overflow: hidden;
}
.course.course_price {
    color: #F94312;  
}
.course.course_period {
    font-size: 22rpx;
    padding-left: 0;
    padding-top: 34rpx;

}

